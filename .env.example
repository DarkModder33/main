# ============================================
# TradeHax Backend - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# CRITICAL: Never commit .env file to git!

# ============================================
# Server Configuration
# ============================================
NODE_ENV=production
PORT=3001
BACKEND_URL=https://api.tradehax.net
FRONTEND_URL=https://tradehax.net

# ============================================
# Security & JWT
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secure-jwt-secret-here-change-in-production

# ============================================
# Discord OAuth
# ============================================
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_REDIRECT_URI=https://api.tradehax.net/auth/oauth/discord/callback
DISCORD_STATE_KEY=discord-state-key-for-csrf-protection
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_GUILD_ID=your-discord-server-id

# ============================================
# Google/Gmail OAuth
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://api.tradehax.net/auth/oauth/gmail/callback
GOOGLE_STATE_KEY=google-state-key-for-csrf-protection

# ============================================
# Database (Optional - for production)
# ============================================
# DATABASE_URL=postgresql://user:password@db.example.com:5432/tradehax

# ============================================
# Feature Flags
# ============================================
ENABLE_WEB3_AUTH=true
ENABLE_DISCORD_AUTH=true
ENABLE_GMAIL_AUTH=true
ENABLE_DISCORD_BOT=false
ENABLE_RATE_LIMITING=true

# ============================================
# Monitoring & Analytics
# ============================================
# SENTRY_DSN=https://key@sentry.io/project-id
# LOG_LEVEL=info

# ============================================
# Solana / Web3
# ============================================
# Cluster: mainnet-beta | devnet | testnet
SOLANA_NETWORK=mainnet-beta
# RPC: use a dedicated provider (Helius, Triton, QuickNode, etc.) for reliability
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Optional: Discord webhook for critical backend alerts (e.g., Solana failures)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# ============================================
# Next.js/Frontend Public Environment Variables
# ============================================
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta
NEXT_PUBLIC_SOLANA_RPC=https://api.mainnet-beta.solana.com
NEXT_PUBLIC_HELIUS_API_KEY=heliusdemo
NEXT_PUBLIC_CLAIM_API_BASE=https://tradehaxai.tech/api/claim
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
# NEXT_PUBLIC_FEATURE_FLAG=

# ============================================
# TradeHax - Environment Configuration
# ============================================
# Copy this file to .env.local and fill in your values
# CRITICAL: Never commit .env or .env.local files to git!
# 
# For Vercel deployment:
# 1. Set these variables in Vercel Dashboard → Settings → Environment Variables
# 2. Choose appropriate environment: Production, Preview, Development
# 3. All NEXT_PUBLIC_ variables will be exposed to the browser
#
# Documentation: See DEPLOYMENT_GUIDE.md for detailed setup instructions

# ============================================
# Deployment Environment
# ============================================
NODE_ENV=production

# ============================================
# Domain Configuration
# ============================================
# Your primary domain (e.g., tradehaxai.tech or tradehaxai.me)
NEXT_PUBLIC_SITE_URL=https://tradehaxai.tech
# Alternative domain for the second deployment
# NEXT_PUBLIC_SITE_URL_ALT=https://tradehaxai.me

# ============================================
# Solana / Web3 Configuration
# ============================================
# Network: mainnet-beta (production) | devnet (testing) | testnet
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta

# Solana RPC endpoint - IMPORTANT: Use a dedicated RPC provider for production
# Free options: https://api.mainnet-beta.solana.com (rate limited)
# Recommended paid providers: Helius, QuickNode, Triton, Alchemy
# Example: https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
NEXT_PUBLIC_SOLANA_RPC=https://api.mainnet-beta.solana.com

# Helius API key (optional but recommended for better performance)
# Get free key at: https://dev.helius.xyz/
NEXT_PUBLIC_HELIUS_API_KEY=

# ============================================
# API Endpoints
# ============================================
# Base URL for claim API endpoint (used for reward claims)
NEXT_PUBLIC_CLAIM_API_BASE=https://tradehaxai.tech/api/claim

# Backend API URL (if using separate backend)
# NEXT_PUBLIC_API_URL=https://api.tradehaxai.tech

# ============================================
# Analytics & Monitoring
# ============================================
# Google Analytics Measurement ID (format: G-XXXXXXXXXX)
# Get from: https://analytics.google.com/
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# Vercel Analytics is enabled by default (no config needed)
# See: https://vercel.com/analytics

# Sentry DSN for error tracking (optional)
# NEXT_PUBLIC_SENTRY_DSN=https://key@sentry.io/project-id

# ============================================
# Authentication (if using backend)
# ============================================
# JWT Secret - Generate with: openssl rand -base64 32
JWT_SECRET=

# Discord OAuth (optional - for Discord login)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=https://tradehaxai.tech/auth/discord/callback
DISCORD_BOT_TOKEN=
DISCORD_GUILD_ID=

# Google OAuth (optional - for Google login)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://tradehaxai.tech/auth/google/callback

# ============================================
# Database (if using backend with database)
# ============================================
# PostgreSQL connection string
# DATABASE_URL=postgresql://user:password@host:5432/database

# MongoDB connection string (alternative)
# MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/database

# ============================================
# Email Service (optional)
# ============================================
# For contact forms and notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@tradehaxai.tech

# SendGrid API key (alternative to SMTP)
# SENDGRID_API_KEY=

# ============================================
# Payment Integration (optional)
# ============================================
# Stripe keys for payment processing
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# Feature Flags
# ============================================
# Toggle features on/off
NEXT_PUBLIC_ENABLE_WEB3_AUTH=true
NEXT_PUBLIC_ENABLE_SOCIAL_AUTH=false
NEXT_PUBLIC_ENABLE_PAYMENTS=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# ============================================
# Rate Limiting & Security
# ============================================
# Enable rate limiting for API routes
ENABLE_RATE_LIMITING=true

# NOTE: CORS is automatically configured by Next.js for API routes
# For custom CORS configuration, see app/api/*/route.ts files

# ============================================
# Development Only
# ============================================
# These should only be used in development, not production

# Enable debug logging
# DEBUG=true

# Disable HTTPS requirement in development
# DISABLE_HTTPS=true

# ============================================
# TradeHax - Sample Environment Configuration
# ============================================
# This is a minimal sample configuration for quick setup
# For complete documentation, see .env.example

# REQUIRED - Solana Configuration
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta
NEXT_PUBLIC_SOLANA_RPC=https://api.mainnet-beta.solana.com

# REQUIRED - Site Configuration  
NEXT_PUBLIC_SITE_URL=https://tradehaxai.tech
NEXT_PUBLIC_CLAIM_API_BASE=https://tradehaxai.tech/api/claim

# OPTIONAL - Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# OPTIONAL - Enhanced RPC (Recommended for production)
NEXT_PUBLIC_HELIUS_API_KEY=

# OPTIONAL - Feature Flags
NEXT_PUBLIC_ENABLE_WEB3_AUTH=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "TradeHax: Next.js Full Stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "serverReadyAction": {
        "pattern": "Local:\\s+(https?://\\S+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "TradeHax: Browser Debug",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "TradeHax: VS Code Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/.vscode-extension"
      ],
      "outFiles": [
        "${workspaceFolder}/.vscode-extension/dist/**/*.js"
      ],
      "preLaunchTask": "TradeHax: Extension Build"
    }
  ],
  "compounds": [
    {
      "name": "TradeHax: App + Extension",
      "configurations": [
        "TradeHax: Next.js Full Stack",
        "TradeHax: VS Code Extension"
      ]
    }
  ]
}
